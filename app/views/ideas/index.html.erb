<div class="d-flex mb-5 flex-wrap"> 
<% @ideas.each do |idea| %>
        <div class="col-md-12 col-sm-12 col-12 border-top border-dark border-3">
            <div class="mx-3">
                <h2><%= idea.title %></h2>
                <div class="d-flex justify-content-between">
                    <h5><%= idea.description%></h5>
                </div>
                <div class="d-flex align-items-center my-3">
                    <div> <%= link_to("By #{idea.user.name}", idea_path(idea)) %> </div>
                    <% @like = idea.likes.find_by(user: current_user) %>
                    <% if @like %>
                        <div class="mx-3 flex-grow-1"> <%= link_to("Liked", like_path(@like), method: :delete, class: "btn btn-outline-dark") %> </div>
                    <% else %>
                        <div class="mx-3 flex-grow-1"> <%= link_to("Like", idea_likes_path(idea.id), method: :post, class: "btn btn-outline-dark") %> </div>
                    <% end %>
                    <div class="justify-self-end">Likes: <%= idea.likes.count%></div>
                </div>
                
            </div>
        </div>  
<% end %>
</div>