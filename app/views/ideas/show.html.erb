<div class="container mx-3">
    <h1 class="mt-3"><%= @idea.title%></h1>
    <p class="mt-3 font-weight-bold"><%= @idea.description%><p>
    <p class="mt-3">Created <%= time_ago_in_words(@idea.created_at)%> ago</p>
    <% if can?(:crud, @idea) %>
        <div class="mt-3">
            <%= link_to('Edit', edit_idea_path(@idea.id), class:"btn btn-outline-dark") %>
            <%= link_to('Delete', idea_path(@idea.id), method: :delete, data:{confirm:"Are you sure?"}, class: "btn btn-outline-dark") %>
        </div>
    <% end %>
</div>
<div class="mx-3">
    <%= form_with(model:[@idea, @review], class:"mt-3") do |form|%>
        <div class="form-group">
        <h3>Review</h3>
        <%= form.text_area :body, class: "form-control", placeholder:"Leave your feedback here" %>
        </div>
        <%= form.submit "Submit", class:"btn btn-outline-dark mt-3"%>
    <% end %>
</div>
<% @reviews.each do |review| %>
    <div class= "mx-3 mt-3">
        <h5><%= review.body%></h5>
        <div class="d-flex"> 
            Reviewed <%= time_ago_in_words(review.created_at)%> ago by <%= review.user.name %>
            <br>
            <% if can?(:crud, review) %>
                <%= link_to('Delete', idea_review_path(@idea.id, review.id), 
                method: :delete, data:{confirm:"Are you sure?"}, class: "btn btn-outline-dark mx-3") %>
            <% end %>
        </div>
    </div>
<% end %>
